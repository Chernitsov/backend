version: '3.1'

services:
  db_postgres:
    image: postgres
    restart: always
    volumes:
      - ./docker/postgreesql:/var/lib/postgresql/data
    environment:
      POSTGRES_USER: backend
      POSTGRES_PASSWORD: backend
      POSTGRES_DB: backend
    ports:
      - '5432:5432'

  redis:
    image: redis
    ports:
      - '6379:6379'
    volumes:
      - ./docker/redis:/data
    entrypoint: redis-server --appendonly yes
    restart: always

  adminer:
    image: adminer
    restart: always
    ports:
      - 8080:8080

  minio:
    image: minio/minio
    volumes:
      - ./docker/minio:/data
    ports:
      - '9000:9000'
    environment:
      MINIO_ACCESS_KEY: minio
      MINIO_SECRET_KEY: minio123
    command: server /data
